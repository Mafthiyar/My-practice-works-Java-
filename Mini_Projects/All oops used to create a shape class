/*
Develop a project to create RWO Shape in PW
with its operations findArea() and findPerimeter()
with its sub type objects Rectangle, Square and Circle
and with use type Painter

You must develop this project by implementing all OOP concepts
  1. class
  2. object(instance)
  3. encapsulation
  4. inheritance
  5. polymorphism
  6. abstraction
  7. loose coupling
  8. runtime polymorphism and
  9. message passing
*/

//======== super class ==================
//Shape.java (abstraction)
abstract class Shape {
	abstract void findArea();
	abstract void findPerimeter();
}


//======== sub classes ==================
//Rectangle.java
class Rectangle extends Shape {		//inheritance

	private double l;		//encapsulation	
	private double b;
	
	Rectangle(double l, double b){
		this.l = l;
		this.b = b;
	}
	
	@Override
	void findArea(){		//polymorphism
		double area = l * b;
		System.out.println("Rectangle area: " +  area);
	}
	
	@Override
	void findPerimeter(){
		double perimeter = 2 * (l + b);
		System.out.println("Rectangle Perimeter: "+ perimeter);
	}
}

//Square.java
class Square extends Shape {		//inheritance

	private double s;		//encapsulation	
	
	Square(double s){
		this.s = s;
	}
	
	@Override
	void findArea(){		//polymorphism
		double area = s * s;
		System.out.println("Square area: " +  area);
	}
	
	@Override
	void findPerimeter(){
		double perimeter = 4 * s;
		System.out.println("Square Perimeter: "+ perimeter);
	}
}

//Circle.java
class Circle extends Shape {		//inheritance

	private static final float PI = 3.14f;
	
	private double r;		//encapsulation	
	
	Circle(double r){
		this.r = r;
	}
	
	@Override
	void findArea(){		//polymorphism
		double area = PI * r * r;
		System.out.println("Circle area: " +  area);
	}
	
	@Override
	void findPerimeter() {
		double perimeter = 2 * PI * r;
		System.out.println("Circle Perimeter: "+ perimeter);
	}
}


//================== user class =============
//Painter.java
class Painter {
    void draw(Shape s){		//LC
	s.findArea();		//RP
	s.findPerimeter();
    }
}


//=============== main method class ===========
//Customer.java
class Customer {
   public static void main(String[] args) {
   
	Painter hk = new Painter();
	
	//hk.draw(new Rectangle(10, 5));//message passing (Pass-By-Value)
	hk.draw(new Square(10));//message passing (Pass-By-Value)
   }
} 


<<<<<<<<<<<<<<<<.............My Way...............>>>>>>>>>>>>>>

import java.sql.SQLOutput;

abstract class shape{
        abstract void findArea();
        abstract void findPerimeter();
    }

    class rectangle extends shape{
    private double l;
    private double b;

    rectangle(double l, double b){
        this.l = l;
        this.b = b;
    }

    void  findArea(){
        double area = l * b;
        System.out.println(area);
    }
        void  findPerimeter() {
            double perimeter = 2 * (l + b);
            System.out.println(perimeter);
        }
    }

    class square extends shape{
    private double s;
      square(double s){
          this.s = s;
      }

        @Override
        void findArea() {
            double area = s * s;
            System.out.println(area);
        }

        @Override
        void findPerimeter() {
            double perimeter = 4 * s;
            System.out.println(perimeter);
        }
    }

    class circle extends shape{
    private static final float PI = 3.14f;
    private double r;

    circle(double r){
        this.r = r;
    }
        void findArea() {
            double area = PI * r * r;
            System.out.println(area);
        }

        @Override
        void findPerimeter(){
            double perimeter = 2 * PI * r;
            System.out.println(perimeter);
        }
    }



    class painter{
        void draw(shape s){
            s.findArea();
            s.findPerimeter();
        }
    }
    class solution{
    public static void main (String[] args){
        painter p = new painter();
        p.draw(new rectangle(10,5));
        p.draw(new square(10));
        p.draw(new circle(10));
    }
}
